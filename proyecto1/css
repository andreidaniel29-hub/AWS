    color: #fff;
}
/*Contenedor*/
.container {
    background-color: rgba(255, 255, 255, 0.1);
    padding: 30px;
    border-radius: 10px;
    text-align: center;
    width: 350px;
    box-shadow: 0 4px 10px rgba(0,0,0,0.3);
}

.container.small {
    width: 300px;
}

/* titulos y textos  */
h1 {
    margin-bottom: 20px;
    font-size: 24px;
}

p {
    margin-top: 15px;
    font-size: 14px;
}

/* formularios */
