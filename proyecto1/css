    display: block;
    margin: 10px 0 5px;
    text-align: left;
    color: #fff;
}

input {
    width: 100%;
    padding: 8px;
    border: none;
    border-radius: 5px;
    margin-bottom: 15px;
}

/* botones */
button {
    width: 100%;
    padding: 10px;
    background-color: #fff;
    color: #8b4bb9ff; /* mismo morado */
    font-weight: bold;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: 0.3s;
}

button:hover {
    background-color: #e0d4f7;
}

/* enlaces */
a {
    color: #ffd700;
    text-decoration: none;
    font-weight: bold;
}

a:hover {
    text-decoration: underline;
}




